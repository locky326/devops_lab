NameVirtualHost *:80

{% for vhost in apache_vhosts %}
    <VirtualHost *:80>
      ServerName {{ vhost.servername }}
      DocumentRoot {{ vhost.documentroot }}
      ServerAdmin {% if vhost.ServerAdmin %} {{ vhost.ServerAdmin }} {% endif %}
      <Directory "/usr/local/httpd/htdocs">
         AllowOverride All
         Options Indexes FollowSymLinks
         Order allow,deny
         Allow from all
      </Directory>
    </VirtualHost>
{% endfor %}